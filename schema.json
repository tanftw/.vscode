{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Person",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "The person's name"
      },
      "age": {
        "type": "integer",
        "minimum": 0,
        "description": "The person's age"
      },
      "gender": {
        "type": "string",
        "enum": ["male", "female"],
        "description": "The person's gender"
      }
    },
    "required": ["name", "age", "gender"]
  }
  